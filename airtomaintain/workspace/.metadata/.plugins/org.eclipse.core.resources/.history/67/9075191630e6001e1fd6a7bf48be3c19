package com.airtomaintain.maintenance.dto;

import jakarta.validation.constraints.NotEmpty;
import jakarta.validation.constraints.Pattern;
import lombok.Data;

@Data
public class PartsDto {
	
	@NotEmpty(message = "Parts OEM cann't be null or empty")
	private int partsOem;
	
	@NotEmpty(message = "Parts Name cann't be null or empty")
	private String partsName;
	
	@NotEmpty(message = "Parts Number cann't be null or empty")
	private String partsNumber;
	
	@NotEmpty(message = "Parts Manufacture cann't be null or empty")
	private String partsMfn;
	
	@NotEmpty(message = "Parts Quantity cann't be null or empty")
	@Pattern(regexp="($|[0-9] {3})", message = "Parts Quantity cann't exeeds 100 and it accepts only digits")
	private int partsQty;

}
